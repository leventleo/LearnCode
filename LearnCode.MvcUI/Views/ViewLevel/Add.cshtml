@model LearnCode.MvcUI.Models.ViewLevelwithImage

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add</h2>

<h4>ViewLevel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-controller="ViewLevel" asp-action="AddAsync">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Levelid" class="control-label"></label>
                <input asp-for="Levelid" class="form-control" />
                <span asp-validation-for="Levelid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LevelidName" class="control-label"></label>
                <input asp-for="LevelidName" class="form-control" />
                <span asp-validation-for="LevelidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="comment">Comment:</label>
                <textarea class="form-control" asp-for="LevelContent"></textarea>
                <span asp-validation-for="LevelContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LevelImage" class="control-label"></label>
                <input type="file" asp-for="LevelImage" class="form-control" />
                <span asp-validation-for="LevelImage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
 

