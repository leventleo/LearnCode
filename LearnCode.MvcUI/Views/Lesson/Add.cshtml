@model LearnCode.MvcUI.Models.AddViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <h3> Add Lesson</h3>

    <div class="col-md-12">
        <form asp-action="Add" asp-antiforgery="true">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lesson.LessonName" class="control-label"></label>
                <input asp-for="Lesson.LessonName" class="form-control" />
                <span asp-validation-for="Lesson.LessonName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button class="btn btn-primary"><span class="glyphicon glyphicon-plus-sign success"></span> Creat</button>
            </div>
        </form>
    </div>
</div>

<div class="container">



    <table class="table table-bordered ">
        <thead>
            <tr style="background-color:#ff6a00;color:white">
                <td>
                    Lesson Name
                </td>
                <td>
                    Creat Date
                </td>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Lessons)
            {
                <tr>
                    <td>@item.LessonName</td>
                    <td>@item.CreatTime</td>
                </tr>
            }

        </tbody>
        <tfoot>
            <tr>Total Count : @Model.Lessons.Count</tr>
        </tfoot>

    </table>

</div>
