@model LearnCode.MvcUI.Models.ListViewModel
@{
    ViewData["Title"] = "Remove";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">

    <div class="form-group form-inline">

        <input class="form-control" type="text" placeholder="Search lesson..." name="search" />
        <button class="btn btn-success"><span class="glyphicon glyphicon-search"></span>  Lesson Search</button>

    </div>

</div>

<div class="container" style="margin-top:10px">


    <table class="table table-bordered">
        <thead>
            <tr>
                <td>
                    Lesson Name
                </td>
                <td>
                    Creat Date
                </td>
                <td>
                    Action
                </td>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Lessons)
            {
                <tr id="@item.id">
                    <td>@item.LessonName</td>
                    <td>@item.CreatTime</td>
                    <td>
                        <div class="form-inline" style="color:white!important;">
                           
                                <form  class="form-group"  data-ajax-comfirm="Are you Sure Delete Lesson" method="post" data-ajax="true" data-ajax-method="post" data-ajax-complete="completed">
                                    <input class="hidden" type="hidden" name="id" value="@item.id" />
                                    <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete
                                    </button>
                                </form>
                             
                            <button class="btn btn-info"><span class="glyphicon glyphicon-edit"></span> Update</button>
                        </div>

                    </td>
                </tr>
            }

        </tbody>
        <tfoot>
            <tr>Total Count : @Model.Lessons.Count</tr>
        </tfoot>

    </table>

</div>


<script>

  

 
    function completed(xhr, status) {
               
        document.getElementById(xhr.responseText).remove()
    }

</script>
